@{
}

@model MVCCRUD.Models.AddEmployeeViewModel

<h1>Add Employee</h1>
<form method="post">
<div class="mt-3">
<label class="form-label">Name</label>
<input type="text" class="form-control" asp-for="Name"/>
</div>

<div class="mt-3">
    <label class="form-label">Age</label>
    <input type="number" class="form-control" asp-for="Age" />
</div>

<div class="mt-3">
    <label class="form-label">Dep</label>
    <input type="text" class="form-control" asp-for="Dep" />
</div>

<div class="mt-3">
    <label class="form-label">Salary</label>
    <input type="number" class="form-control" asp-for="Salary" />
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</form>